{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": ["app/**/*.{ts,tsx}", "components/**/*.{ts,tsx}", "lib/**/*.{ts,tsx}", "hooks/**/*.{ts,tsx}", "next.config.mjs", "vitest.config.ts"],
  "project": ["**/*.{ts,tsx,js,jsx}", "!**/*.test.{ts,tsx}", "!**/*.spec.{ts,tsx}"],
  "ignore": [".next/**", "out/**", "node_modules/**", "dist/**"],
  "ignoreDependencies": ["tailwindcss", "postcss", "@tailwindcss/postcss", "next-sitemap", "import-in-the-middle", "require-in-the-middle", "@sentry/nextjs", "@vercel/analytics", "@vercel/speed-insights"],
  "next": {
    "entry": ["app/**/*.{ts,tsx}", "middleware.ts"]
  },
  "vitest": {
    "config": ["vitest.config.ts"],
    "entry": ["vitest.setup.ts"]
  }
}
